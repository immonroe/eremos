<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eremos - Bookmarks</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/style.css">
  <!-- <link rel="stylesheet" href="/output.css"> -->
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="sidebar-logo">
          <h1>Eremos</h1>
          <p class="tagline">Find your oasis</p>
        </div>
      </div>
      
      <nav class="sidebar-nav">
        <a href="/profile" class="nav-link">
          <i class="fas fa-book-open"></i> 
          <span>Journal</span>
        </a>
        <a href="/bookmarks" class="nav-link active">
          <i class="fas fa-bookmark"></i> 
          <span>Bookmarks</span>
        </a>
      </nav>
      
      <div class="sidebar-footer">
        <button id="themeToggle" class="theme-btn">
          <i class="fas fa-sun"></i>
          <i class="fas fa-moon"></i> 
          <span>Toggle Theme</span>
        </button>
        <a href="/logout" class="logout-btn">
          <i class="fas fa-sign-out-alt"></i> 
          <span>Sign Out</span>
        </a>
      </div>
    </aside>

    <main class="main-content">
      <header class="mobile-header">
        <h1>Eremos</h1>
        <div class="header-actions">
          <button id="mobileThemeToggle" class="icon-btn"><i class="fas fa-sun"></i><i class="fas fa-moon" style="display: none;"></i></button>
          <button id="mobileMenuBtn" class="icon-btn"><i class="fas fa-bars"></i></button>
        </div>
      </header>

      <div class="mobile-nav">
        <div class="mobile-tabs">
          <a href="/profile" class="tab-btn"><i class="fas fa-book-open"></i> Journal</a>
          <a href="/bookmarks" class="tab-btn active"><i class="fas fa-bookmark"></i> Bookmarks</a>
        </div>
      </div>

      <div class="content">
        <div class="content-header">
          <h2>Bookmarks</h2>
           <% if (locals.success && success.length > 0) { %>
             <div class="alert alert-success" role="alert"><%= success %></div>
           <% } %>
           <% if (locals.error && error.length > 0) { %>
             <div class="alert alert-danger" role="alert"><%= error %></div>
           <% } %>
          <p>Revisit your saved reflections.</p>
        </div>

        <!-- Search Form on Bookmarks -->
        <div class="search-form-container" style="margin-bottom: 1.5rem;">
          <form action="/bookmarks" method="GET" class="search-form" style="display: flex;"> <!-- ACTION points to /bookmarks -->
            <input
              type="search"
              name="q"
              class="form-control search-input"
              style="flex-grow: 1; margin-right: 0.5rem;"
              placeholder="Search your bookmarks..."
              aria-label="Search bookmarks"
              value="<%= locals.searchTerm || '' %>"
            >
            <button class="btn btn-outline-secondary" type="submit">Search</button>
          </form>
        </div>

        <div class="history-section">
          <div class="history-list">
            <% if (locals.messages && messages.length > 0) { %>
                <% messages.forEach(function(message) { %>
                  <div class="card history-card" data-id="<%= message._id %>">
                    <div class="card-header">
                      <div class="card-title">
                        <h4><%= message.displayDate %> at <%= message.displayTime %></h4>
                        <a href="/entries/<%= message._id %>" class="btn btn-text">View Full Entry</a>
                      </div>
                      <button class="btn btn-icon bookmark-btn" title="Remove Bookmark">
                         <i class="fas fa-bookmark"></i>
                      </button>
                    </div>
                    <div class="card-body">
                      <p class="entry-snippet"><%= message.text %></p>

                      <% if (message.aiReflection && !message.aiReflection.includes('failed') && !message.aiReflection.includes('pending')) { %>
                        <p class="reflection-indicator"><i class="fas fa-comment-dots"></i> Reflection available</p>
                      <% } else if (message.aiReflection) { %>
                         <p class="reflection-indicator"><i class="fas fa-exclamation-circle"></i> Reflection issue</p>
                      <% } %>
                    </div>
                    <div class="card-footer">
                      <button class="btn btn-danger btn-sm delete-btn">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </div>
                <% }); %>
            <% } else { %>
                <p>You haven't bookmarked any entries yet. Click the <i class="far fa-bookmark"></i> icon on an entry in your main journal list to save it here.</p>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script src="/main.js"></script>
</body>
</html>