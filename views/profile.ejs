<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eremos - Find Your Oasis</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="app-container">
    <aside class="sidebar">
      <div class="sidebar-logo">
        <h1>Eremos</h1>
      </div>
      <nav class="sidebar-nav">
        <a href="/profile" class="nav-link active"><i class="fas fa-book-open"></i> Journal</a>
        <a href="/bookmarks" class="nav-link"><i class="fas fa-bookmark"></i> Bookmarks</a>
      </nav>
      <div class="sidebar-footer">
        <button id="themeToggle" class="theme-btn"><i class="fas fa-sun"></i><i class="fas fa-moon" style="display: none;"></i> <span>Toggle Theme</span></button>
        <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
      </div>
    </aside>

    <main class="main-content">
      <header class="mobile-header">
        <h1>Eremos</h1>
        <div class="header-actions">
          <button id="mobileThemeToggle" class="icon-btn"><i class="fas fa-sun"></i><i class="fas fa-moon" style="display: none;"></i></button>
          <button id="mobileMenuBtn" class="icon-btn"><i class="fas fa-bars"></i></button>
        </div>
      </header>

      <div class="mobile-nav">
        <div class="mobile-tabs">
          <a href="/profile" class="tab-btn active"><i class="fas fa-book-open"></i> Journal</a>
          <a href="/bookmarks" class="tab-btn"><i class="fas fa-bookmark"></i> Bookmarks</a>
        </div>
      </div>

      <div class="content">
        <div class="content-header">
          <h2>Journal</h2>
           <% if (locals.success && success.length > 0) { %>
             <div class="alert alert-success" role="alert">
               <%= success %>
             </div>
           <% } %>
           <% if (locals.error && error.length > 0) { %>
             <div class="alert alert-danger" role="alert">
               <%= error %>
             </div>
           <% } %>
          <p>Write your thoughts and reflections.</p>
        </div>

        <div class="card journal-card">
          <div class="card-header">
            <h3><i class="fas fa-edit"></i> Each entry brings you closer...</h3>
            <p>Write whatever is on your mind...</p>
          </div>
          <div class="card-body">
            <form action="/messages" method="POST">

              <div class="form-group">
                <label for="entryText">Your Thoughts Today:</label>
                <textarea id="entryText" name="entryText" class="form-control journal-textarea" placeholder="Enter your thoughts here..." required></textarea>
              </div>

              <div class="card-actions">
                <button type="submit" class="btn btn-primary">Submit Entry</button> 
              </div>
            </form>
          </div>
        </div>

        <div class="history-section">
          <div class="section-header">
            <h3>Journal History</h3>
          </div>

          <div class="history-list">
            <% if (locals.messages && messages.length > 0) { %>
                <% messages.forEach(function(message) { %>
                  <div class="card history-card" data-id="<%= message._id %>">
                    <div class="card-header">
                      <div class="card-title">
                        <h4><%= message.displayDate %> at <%= message.displayTime %></h4>
                        <a href="/entries/<%= message._id %>" class="btn btn-text">View Full Entry</a>
                      </div>
                      <button class="btn btn-icon bookmark-btn" title="Toggle Bookmark">
                        <% if (message.isBookmarked) { %>
                            <i class="fas fa-bookmark"></i> <!-- Font Awesome Solid (filled) -->
                        <% } else { %>
                            <i class="far fa-bookmark"></i> <!-- Font Awesome Regular (empty) -->
                        <% } %>
                    </button>
                    </div>
                    <div class="card-body">
                      <p class="entry-snippet"><%= message.text %></p>

                      <% if (message.aiReflection && !message.aiReflection.includes('failed') && !message.aiReflection.includes('pending')) { %>
                        <p class="reflection-indicator"><i class="fas fa-comment-dots"></i> Reflection available</p>
                      <% } else if (message.aiReflection) { %>
                         <p class="reflection-indicator"><i class="fas fa-exclamation-circle"></i> Reflection issue</p>
                      <% } %>
                    </div>
                    <div class="card-footer">
                      <button class="btn btn-danger btn-sm delete-btn">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </div>
                <% }); %>
            <% } else { %>
                <p>No journal entries found yet. Write your first one above!</p>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script src="/main.js"></script>
</body>
</html>