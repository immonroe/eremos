<!doctype html>
<html>
<head>
  <title>Eremos</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="container">

    <div class="page-header text-center">
      <h1>Eremos</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-6">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">
            <h3 class="panel-title">New Journal Entry</h3>
          </div>
          <div class="panel-body">
            <% if (user.local.email) { %>
            <form action="/messages" method="POST">
              <input type="hidden" name="name" value="<%= user.local.email %>">

              <div class="form-group">
                <input type="text" name="question1" class="form-control" placeholder="Question #1" required>
              </div>
              <div class="form-group">
                <input type="text" name="question2" class="form-control" placeholder="Question #2" required>
              </div>
              <div class="form-group">
                <input type="text" name="question3" class="form-control" placeholder="Question #3" required>
              </div>
              <div class="form-group">
                <input type="text" name="question4" class="form-control" placeholder="Question #4" required>
              </div>

              <button type="submit" class="btn btn-success btn-block">Save Entry</button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <hr>

    <h3 class="text-center">Past Entries</h3>
    <ul class="list-group">
      <% messages.forEach(function(message) { %>
        <li class="list-group-item" data-id="<%= message._id %>">
          <p><strong>Date:</strong> <%= message.date %> <%= message.time %></p>
          <p><strong>Question 1:</strong> <%= message.question1 %></p>
          <p><strong>Question 2:</strong> <%= message.question2 %></p>
          <p><strong>Question 3:</strong> <%= message.question3 %></p>
          <p><strong>Question 4:</strong> <%= message.question4 %></p>
          <div class="text-right">
            <button class="btn btn-danger btn-sm delete-btn">
              <i class="fa fa-trash-o" aria-hidden="true"></i> Delete
            </button>
          </div>
        </li>
      <% }); %>
    </ul>

  </div>

  <script src="main.js"></script>
</body>
</html>
